<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".duytam.Chitietnhac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#1E1F26"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trove"
            android:layout_width="120px"
            android:layout_height="120px"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70px"
            android:text="Chúng ta không thuộc về nhau"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39496B"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_gravity="center"
            android:layout_marginTop="300px"
            app:srcCompat="@drawable/chitietnhac" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#39496B"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTransfer"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginTop="180px"
            app:srcCompat="@drawable/transfer" />

        <ImageView
            android:id="@+id/imgback_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="150px"
            app:srcCompat="@drawable/backto" />

        <ImageView
            android:id="@+id/imgplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="150px"
            app:srcCompat="@drawable/play" />

        <ImageView
            android:id="@+id/imgnext_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="150px"
            app:srcCompat="@drawable/next" />

        <ImageView
            android:id="@+id/imgrepeat"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginTop="170px"
            app:srcCompat="@drawable/repeat" />
    </LinearLayout>
</LinearLayout>