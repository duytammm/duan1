<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangKyActivity"
    android:background="#1E1F26"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/dn_logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="ĐĂNG KÝ"
        android:textSize="40dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dangky_user"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtTen"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên..."
            android:textColorHint="#B5E6E6E6"
            android:textColor="@color/white"
            android:background="@drawable/custon_editext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dk_mail"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtMail"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mail..."
            android:textColorHint="#B5E6E6E6"
            android:textColor="@color/white"
            android:background="@drawable/custon_editext"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dangky_show"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textColorHint="#B5E6E6E6"
            android:textColor="@color/white"
            android:background="@drawable/custon_editext"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/dangky_show"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/edtNLMatKhau"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu..."
            android:textColorHint="#B5E6E6E6"
            android:textColor="@color/white"
            android:background="@drawable/custon_editext"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btDangKy"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#4D648D"
        android:text="Đăng Ký"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btTroVe"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4D648D"
        android:text="Trở Về"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>

