<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F26"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearSlideShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39496B"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/cirCle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoXaXonXao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearSlideShow"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#39496B"
        android:padding="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imgPlaylist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:src="@drawable/trangchu_phoxa" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Phố xá xôn xao" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|right"
            android:src="@drawable/trangchu_next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CaFe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoXaXonXao"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#39496B"
        android:padding="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:src="@drawable/trangchu_cafe" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tieude1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_gravity="center"
            android:text="Cà phê quán quen" />

        <ImageView
            android:id="@+id/next1"
            android:layout_weight="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|right"
            android:src="@drawable/trangchu_next" />
    </LinearLayout>

    <TextView
        android:id="@+id/playlistYeuThich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CaFe"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="Playlist yêu thích" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNagigatiom"
        android:layout_below="@+id/playlistYeuThich"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:backgroundTint="#39496B"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/playlist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imgplaylist1"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/timkiem_podcast" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chill deep"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:backgroundTint="#39496B"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/playlist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imgplaylist2"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/timkiem_melody" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tâm Trạng"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>