<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:backgroundTint="#D0E1F9"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TẠO PLAYLIST"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgPL"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bia_pl"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@drawable/custom_spinner_update"
            android:hint="Tên playlist"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/thembh_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTenPL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textStyle="bold"
                android:textSize="20sp"
                android:backgroundTint="#39496B"/>

            <Button
                android:id="@+id/btHuy"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:backgroundTint="#39496B"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>