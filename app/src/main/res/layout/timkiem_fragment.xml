<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1E1F26"
    android:padding="15dp"
    android:orientation="vertical">

    <com.google.android.material.search.SearchView
        android:id="@+id/svTimKiem"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:searchIcon="@drawable/timkiem_search"
        android:queryHint="Nhập bài hát bạn muốn tìm..."
        android:background="#D0E1F9">

    </com.google.android.material.search.SearchView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_weight="0"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Các thể loại nổi bậc" />

    <LinearLayout
        android:layout_weight="0"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgLofi"
                android:layout_width="117dp"
                android:layout_height="205dp"
                android:src="@drawable/timkiem_lofy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Lofi"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgPodcast"
                android:layout_width="117dp"
                android:layout_height="205dp"
                android:src="@drawable/timkiem_podcast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Podcast"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@drawable/ic_launcher_background"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgMelody"
                android:layout_width="117dp"
                android:layout_height="205dp"
                android:src="@drawable/timkiem_melody" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Melody of Novamber"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:tabTextColor="#000"
        app:tabSelectedTextColor="#fff"
        android:layout_height="wrap_content"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpg2"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>